@model QuanLyCuaHangTapHoa.Models.NhanVien
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>ĐĂNG NHẬP HỆ THỐNG QUẢN TRỊ</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body.bg-dark {
            background: linear-gradient(135deg, #3c4b63 0%, #2c3e50 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .container {
            width: 100%;
            padding: 15px;
        }

        .card-login {
            background: rgba(255, 255, 255, 0.98);
            border-radius: 15px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            max-width: 400px;
            margin: 20px auto;
        }

        .card-header {
            background: #3498db;
            color: white;
            padding: 20px;
            text-align: center;
            font-size: 1.5em;
            font-weight: 500;
            letter-spacing: 0.5px;
        }

        .card-body {
            padding: 30px;
        }

        .form-group {
            margin-bottom: 25px;
        }

            .form-group label {
                display: block;
                margin-bottom: 10px;
                color: #34495e;
                font-weight: 500;
                font-size: 0.95rem;
            }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-size: 15px;
            transition: all 0.3s ease;
            color: #2c3e50;
        }

            .form-control:focus {
                border-color: #3498db;
                outline: none;
                box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.25);
            }

        .field-validation-error {
            color: #e74c3c;
            font-size: 0.85rem;
            margin-top: 5px;
            display: block;
        }

        .validation-summary-errors {
            color: #e74c3c;
            margin-bottom: 20px;
            padding: 10px;
            background: #fdf1f0;
            border-radius: 5px;
            font-size: 0.9rem;
        }

        .btn-primary {
            background: #3498db;
            border: none;
            color: white;
            padding: 14px;
            border-radius: 8px;
            width: 100%;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

            .btn-primary:hover {
                background: #2980b9;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(52, 152, 219, 0.4);
            }

        .mx-auto {
            margin-left: auto;
            margin-right: auto;
        }

        .mt-5 {
            margin-top: 3rem;
        }

        .btn-block {
            display: block;
            width: 100%;
        }

        input::placeholder {
            color: #95a5a6;
        }
    </style>
</head>
<body class="bg-dark">
    <div class="container">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Đăng nhập hệ thống quản trị</div>
            <div class="card-body">
                @using (Html.BeginForm("Loginadmin", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        @Html.TextBoxFor(u => u.Email, null, new { @class = "form-control", placeholder = "Nhập email của bạn" })
                        @Html.ValidationMessageFor(u => u.Email)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        @Html.PasswordFor(u => u.Password, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
                        @Html.ValidationMessageFor(u => u.Password)
                    </div>
                    <input class="btn btn-primary btn-block" type="submit" value="Đăng nhập" />
                }
            </div>
        </div>
    </div>
</body>
</html>